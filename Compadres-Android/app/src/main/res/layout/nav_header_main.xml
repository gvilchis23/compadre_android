<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_layout_height"
    android:background="@color/colorPrimaryDark"
    android:clickable="false"
    android:paddingTop="@dimen/status_bar_height"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatarDrawer"
        android:layout_width="@dimen/avatar_size"
        android:layout_height="@dimen/avatar_size"
        android:layout_margin="@dimen/spacing_large"
        android:elevation="4dp"
        android:src="@drawable/ic_profile" />

    <TextView
        android:id="@+id/nameDrawer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/emailDrawer"
        android:layout_marginLeft="@dimen/spacing_large"
        android:layout_marginStart="@dimen/spacing_large"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:text="Guillermo Vilchis"/>

    <TextView
        android:id="@+id/emailDrawer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/spacing_large"
        android:layout_marginLeft="@dimen/spacing_large"
        android:layout_marginStart="@dimen/spacing_large"
        android:text="gvilchis23@gmail.com"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
</RelativeLayout>
